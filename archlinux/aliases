alias ll="ls -lah --color=auto"
alias ds="sudo du -hs"
alias ytmp3="~/Scripts/ytmp3.sh"
alias ytmp4="~/Scripts/ytmp4.sh"
alias bashrc="nano ~/.bashrc && source ~/.bashrc"
alias fstab="sudo nano /etc/fstab"
alias grub="sudo nano /etc/default/grub"
alias grubup="sudo grub-mkconfig -o /boot/grub/grub.cfg"
alias sysupgrade="sudo pacman -Syu"
alias syscleanup="sudo pacman -Sc"
alias ipinfo="ip -br address"
alias ping5="ping -c5"
alias ping10="ping -c10"
alias ztup="sudo systemctl start zerotier-one.service"
alias ztdown="sudo systemctl stop zerotier-one.service"
alias tvup="sudo systemctl start teamviewer.service"
alias tvdown="sudo systemctl stop teamviewer.service"
alias dcbuildx="docker buildx build --platform linux/amd64,linux/arm64,linux/arm/v7 . --push -t"
alias dcps="docker ps --format \"table {{.ID}}\t{{.Names}}\t{{.Image}}\t{{.State}}\t{{.Status}}\t{{.CreatedAt}}\""
alias dchealth="docker inspect --format='{{json .State.Health}}'"
